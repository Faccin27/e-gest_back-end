generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Clients {
  id    Int      @id @default(autoincrement())
  email String   @unique
  name  String
  pfp   String   @unique
  cpf   String   @unique
  birth DateTime

  Address Address[]
}

model Address {
  id           Int    @id @default(autoincrement())
  cep          Int
  city         String
  street       String
  state        String
  number       Int
  neighborhood String

  Clients   Clients? @relation(fields: [clientsId], references: [id])
  clientsId Int?
}