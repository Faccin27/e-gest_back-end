datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Sexo {
  Masculino
  Feminino
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  pass      String   @default("123")
  sexo      Sexo     @default(Masculino)
  pfp       String   @default("default.png")
  createdAt DateTime @default(now())
} 


model Clients {
  id    Int      @id @default(autoincrement())
  name  String
  email String   @unique  
  sexo  Sexo     @default(Masculino)
  pfp   String   
  cpf   String   @unique
  birth DateTime

  Address Address[]
}

model Address {
  id Int @id @default(autoincrement())
  cep Int
  city String
  street String
  state String
  number Int
  neighboorhood String

  Clients   Clients? @relation(fields: [clientsId], references: [id])
  clientsId Int?
} 
